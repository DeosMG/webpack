@import'./variables.styl';

.chapter-nav
	display flex
	justify-content center
	&__link
		display block
	&__item
		flex-grow 0
		flex-shrink 0
		flex-basis 15%
	&__thumbnail
		&-iphone-x
			background-image url(../assets/images/iphone-x.svg)
		&-iphone-8
			background-image url(../assets/images/iphone8_large.svg)
		&-image
			background-position center
			height 45px
			background-size contain
			background-repeat no-repeat
			width 100%
		width 25%
		margin 0 auto
		> img
			width 100%
	&__title
		text-align center
		font-size 0.9rem
